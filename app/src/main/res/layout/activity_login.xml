<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/etonlogo"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Eton"
        android:gravity="center"
        android:textSize="35dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ssp_bold"/>

    <TextView
        android:id="@+id/descView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login to access your notes\nor sign up to get started."
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/ssp_regular"
        android:layout_marginBottom="60dp"
        android:paddingHorizontal="30dp"/>


    <EditText
        android:id="@+id/emailText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="left"
        android:inputType="textEmailAddress"
        android:hint="Enter your email"
        android:fontFamily="@font/ssp_regular"
        android:ems="10"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/person"
        android:drawablePadding="10dp" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:ems="10"
        android:fontFamily="@font/ssp_regular"
        android:gravity="left"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/password"
        android:drawablePadding="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp">

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/ssp_black"
            android:onClick="onLogin"
            android:text="Login"
            android:layout_marginBottom="10dp
"
            />

        <Button
            android:id="@+id/signupBtn"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/ssp_black"
            android:text="Sign up"
            android:onClick="onSignUp"
            android:layout_weight="2"/>

    </LinearLayout>

</LinearLayout>